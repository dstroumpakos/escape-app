{
  "expo": {
    "name": "Unlocked",
    "slug": "escape-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "unlocked",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A0D0D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.unlocked.escapeapp",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "We need access to your camera to scan QR codes for bookings.",
        "NSLocationWhenInUseUsageDescription": "We use your location to show nearby escape rooms.",
        "NSPhotoLibraryUsageDescription": "Upload photos for your profile and social posts."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A0D0D"
      },
      "package": "com.unlocked.escapeapp",
      "versionCode": 1,
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#DC2626"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Unlocked to access your camera for QR code scanning."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Unlocked to use your location to find escape rooms near you."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Unlocked to access your photos for your profile and social posts."
        }
      ]
    ],
    "platforms": [
      "ios",
      "android"
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "eas": {
        "projectId": "63ddda73-e173-4fb4-a368-c4cc5652e509"
      }
    },
    "owner": "dstroump"
  }
}
